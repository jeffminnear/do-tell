<% @page_title = "Registered Applications" %>
<h2>Index Page</h2>

<% if @applications.empty? %>
  <p>You have not registered any applications yet.</p>
<% else %>
  <% @applications.each do |application| %>
    <%= render partial: 'registered_applications/application', locals: { application: application } %>
  <% end %>
<% end %>

<%= link_to "New Application", new_registered_application_path, class: "btn btn-success" %>
