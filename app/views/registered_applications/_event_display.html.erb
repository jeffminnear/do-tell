<div class="row">
  <div class="col-md-3">
    <div class="media">
      <table id="event-list">
        <tr>
          <th>Event</th>
          <th>Count</th>
        </tr>
        <% event_counts.each_with_index do |(event_name, count), i| %>
          <tr style="background-color:<%= select_color(i + 1) %>" >
            <td><%= event_name %></td>
            <td><%= count %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="col-md-5">
    <%= pie_chart event_counts %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <%= line_chart @application.events.group_by_day(:created_at).count %>
  </div>
</div>
